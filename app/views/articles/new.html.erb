<h1>Create a new Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>

    <p>
        <%= f.label :Title %><br/>
        <%= f.text_field :Title %>
    </p>

    <p>
        <%= f.label :Description %><br/>
        <%= f.text_area :Description %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>