<h1><strong>welcome to Articles page</strong></h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="10">Actions</th>

        </tr>
    </thead>
    <tbody>
    <% @articles.each do |article|%>
        <tr>
            <td><%=article.Title%></td>
            <td><%=article.Description%></td>
            <td><%= link_to 'Show' , article_path(article)  %> &nbsp; </td> 
            <td><%= link_to 'Edit' , edit_article_path(article)  %> &nbsp; </td>
            <%# method will not work here it is new in rails 7 %>
            <td> <%= button_to 'Delete', article_path(article), method: :delete %> </td>
        </tr>
    <% end %>
    </tbody>
</table>

<p>
<%= link_to 'Create new article', new_article_path %>
