<% if @article.errors.any? %>
    <h2>These are the following errors</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with(model: @article , local: true) do |f| %>

    <p>
        <%= f.label :Title %><br/>
        <%= f.text_field :Title %>
    </p>

    <p>
        <%= f.label :Description %><br/>
        <%= f.text_area :Description %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>